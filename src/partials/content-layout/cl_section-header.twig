<div class='col-12 mb-5 d-flex justify-content-between align-items-center'>
  <h2 class='display-6 m-0'>{{ title }}</h2>

  {% if link is defined %}
    <p class='fs-5 m-0'>
      <a href='{{ link.href }}' class='link'><i class='bi bi-arrow-return-right me-2'></i>{{ link.text }} </a>
    </p>
  {% endif %}
</div>
