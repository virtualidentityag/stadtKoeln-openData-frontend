{% extends 'layouts::base.twig' %}
{% set theme = 'default' %}

{%
  set templates = [
  {
  name: 'Home',
  variants: [{ href: './homepage', label: 'Default ✅'}]
  },
  {
  name: 'Dataset Overview',
  variants: [{ href: './overview', label: 'Default ❌'}]
  },
  {
  name: 'Dataset Detail',
  variants:  [{ href: './dataset', label: 'Default ❌'}]
  },
  {
  name: 'Data Enquiry',
  variants: [
  { href: './enquiry', label: 'Default ✅'},
  { href: './enquiry-all-states', label: 'With all states ✅'},
  { href: './enquiry-validated', label: 'With validated form ✅'},
  ]
  },
  {
  name: 'Apps',
  variants:  [{ href: './apps', label: 'Default ❌'}]
  },
  ]
%}

{% block content %}
  <div class='d-flex flex-column gap-4 mt-5'>
    {% for template in templates %}
      <div>
        <h1>{{ template.name }}</h1>
        <div class='bg-body-secondary rounded p-4'>
          <div class='row'>
            {% for variant in template.variants %}
              <div class='col-3'>
                <a href='{{ variant.href }}' class='card text-decoration-none'>
                  <div class='ratio ratio-4x3'>
                    <img class='bg-body-tertiary'>
                  </div>
                  <h3 class='h5 px-2 mt-2'>{{ variant.label }}</h3>
                </a>
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
{% endblock %}
