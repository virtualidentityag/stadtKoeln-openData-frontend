{% extends 'layouts::base.twig' %}
{% set theme = 'default' %}

{% block content %}
  {%
    include 'partials::base/b_breadcrumbs.twig' with {
    links: [
    {
    href: './',
    text: 'Startseite'
    },
    {
    text: 'Daten'
    }
    ]
    }
  %}

  <section class='row mb-5'>
    <div class='col-12'>
      <h1 class='display-3 mb-4'>Bitte geben Sie einen Suchbegriff ein.</h1>

      <div class='row'>
        <div class='col-7'>
          <form action='./overview' class='form-inline d-flex gap-2'>
            <input
              class='form-control mr-sm-2'
              type='search'
              placeholder='Datensatze suchen'
              aria-label='Datensatze suchen'
            >
            <button class='btn btn-primary my-2 my-sm-0' type='submit' aria-label='Search'>
              <i class='bi bi-search'></i>
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>

